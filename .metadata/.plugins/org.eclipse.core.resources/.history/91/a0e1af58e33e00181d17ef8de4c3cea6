package com.example.jpetstore.service;

import com.example.jpetstore.domain.Q_A;
import com.example.jpetstore.dao.QADao;

public class QAServiceImpl implements QAService {

	@Autowired
	private QADao qaDao;
	
	@Override
	public void updateQA(int qaNum, String answer, String sellerId) {
		// TODO Auto-generated method stub
		return qaDao.updateQAPost(int qaNum, String answer, String sellerId);
	}

	@Override
	public void deleteQA(int qaNum) {
		// TODO Auto-generated method stub
		return qaDao.deleteQAPost(int qaNum);
	}

	@Override
	public void insertQA(Q_A qa) {
		// TODO Auto-generated method stub
		return qaDao.insertQA(Q_A qa);
	}

	@Override
	public void updateQA(Q_A qa) {
		// TODO Auto-generated method stub
		return qaDao.updateQAPost(Q_A qa);
	}

	@Override
	public Q_A getQA(int itemId) {
		// TODO Auto-generated method stub
		return qaDao.getQA(int itemId);
	}

	@Override
	public Q_A getQA(String adId) {
		// TODO Auto-generated method stub
		return qaDao.getQA(String adId);
	}

}
